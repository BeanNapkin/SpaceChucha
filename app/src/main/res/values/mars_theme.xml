<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MarsTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRed</item>
        <item name="colorPrimaryDark">@color/colorDarkRed</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="colorSecondary">@color/colorOrange</item>
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.Colored</item>
        <item name="h1Text">@style/H1Mars</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonMars</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationMars</item>
        <item name="expandedTitleTextAppearance">@style/MarsExpandedTitle</item>
        <item name="collapsedTitleTextAppearance">@style/MarsCollapsedTitle</item>


    </style>

    <style name="H1Mars">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="FloatingButtonMars" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorWhite</item>
    </style>

    <style name="BottomNavigationMars" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_navigation_mars</item>
    </style>

    <style name="toolBarMars" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="MarsCollapsedTitle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="MarsExpandedTitle" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>